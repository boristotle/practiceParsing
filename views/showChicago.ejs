   <div class='container'>
    <div class='row'>
      <div class='container-fluid'>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
     <div class='item active'>
        <img class="image" src="/images/chicagoImages/LargePhoto<%= theListing.matrixID %>-1.jpeg" height="400" width="800">
      </div>
      <% for (var i = 2; i <= theListing.photoCount; i++) { %>
      <div class='item'>
        <img class="image" src="/images/chicagoImages/LargePhoto<%= theListing.matrixID %>-<%= i %>.jpeg" height="400" width="800">
      </div>
        <% } %>
  </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
